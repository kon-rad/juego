# Backend environment variables example
# Copy this file to .env and fill in the values

# MongoDB Atlas connection string
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/?retryWrites=true&w=majority
MONGODB_DB_NAME=juego

PORT=3001
AI_PROVIDER=together   # Set to "together" in production, "ollama" for local dev
AI_MODEL=llama3.3       # Model name for Together AI (default for production)
TOGETHER_API_KEY=<YOUR_TOGETHER_API_KEY>

# Vapi Voice AI Configuration
VAPI_API_KEY=<YOUR_VAPI_API_KEY>
VAPI_ASSISTANT_ID=<OPTIONAL_DEFAULT_ASSISTANT_ID>
VAPI_PHONE_NUMBER_ID=<OPTIONAL_PHONE_NUMBER_ID>

# Blockchain Configuration
# Set BLOCKCHAIN_ENV to 'local' for local development or 'production' for deployed contracts
BLOCKCHAIN_ENV=local

# Local Development (Hardhat node)
LOCAL_RPC_URL=http://127.0.0.1:8545
LOCAL_ADMIN_PRIVATE_KEY=0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80

# Production (Ronin Mainnet/Testnet)
PRODUCTION_RPC_URL=https://api.roninchain.com/rpc
PRODUCTION_ADMIN_PRIVATE_KEY=<YOUR_PRODUCTION_PRIVATE_KEY>
PRODUCTION_LEARN_TOKEN_ADDRESS=0xD7f0998e629b841747ba5cF4646DCc064d24Ad74
PRODUCTION_BADGE_NFT_ADDRESS=0x89A9dC0A72ebB5Fa99A9872140dF40E46DF09e66

# Legacy/Fallback (will be overridden by BLOCKCHAIN_ENV specific vars)
RPC_URL=http://127.0.0.1:8545
ADMIN_PRIVATE_KEY=0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80
