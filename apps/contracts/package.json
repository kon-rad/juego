{
  "name": "@juego/contracts",
  "version": "1.0.0",
  "description": "Smart contracts for Juego Quest - NFT badges and LEARN tokens on Ronin",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy:local": "hardhat deploy --network hardhat",
    "deploy:localhost": "hardhat run scripts/deploy-local-and-sync.js --network localhost",
    "deploy:saigon": "hardhat deploy --network saigon",
    "deploy:ronin": "hardhat deploy --network ronin",
    "verify:saigon": "hardhat --network saigon sourcify --endpoint https://sourcify.roninchain.com/server",
    "verify:ronin": "hardhat --network ronin sourcify --endpoint https://sourcify.roninchain.com/server",
    "verify:wallet": "node scripts/verify-wallet.js",
    "update:config": "node scripts/update-contracts-config.js",
    "clean": "hardhat clean"
  },
  "keywords": [
    "ronin",
    "nft",
    "erc20",
    "erc721",
    "game"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "dotenv": "^17.2.3",
    "hardhat": "^2.27.0",
    "hardhat-deploy": "^1.0.4"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0"
  }
}
